{
  "name": "cursory-backend",
  "version": "1.0.0",
  "description": "Backend for Cursory - Personal knowledge repository for technical courses and learning roadmaps",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "education",
    "knowledge-management",
    "courses",
    "learning",
    "roadmaps"
  ],
  "author": "Pedro David Juarez Leyva",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "typescript": "^5.8.3"
  }
}
